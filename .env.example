# Authentication
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"
CLIENT_AUTH_SECRET="your-client-auth-secret-here"

# SQLite Database (local file-based)
DATABASE_PATH="./data/sigalix.db"
DB_ENCRYPTION_KEY="your-32-byte-hex-encryption-key"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"
RESEND_FROM_NAME="Your App Name"

# Application URL
NEXT_PUBLIC_URL="http://localhost:3000"

# Cron Jobs
CRON_API_KEY="your-secure-cron-api-key"

# DISABLE NEXT TELEMETRY
NEXT_TELEMETRY_DISABLED=1

# Set to "1" to disable new user signups
NEXT_PUBLIC_DISABLE_SIGNUP=0
